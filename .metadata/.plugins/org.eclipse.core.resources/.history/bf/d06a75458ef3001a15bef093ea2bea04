package Turma9;

import java.util.Scanner;

public class Ex05_10_09_20 {

	public static void main(String[] args) {
		
		int num; 
		
		System.out.println("Entre com o numero: " + "\n Ou 0 para sair...");
		Scanner ler = new Scanner(System.in);
		
		num = ler.nextInt();
		
		do 
		{
			System.out.println("Entre com o numero: " + "\n Ou 0 para sair...");
			num = ler.nextInt();
			num = num + num;
			
			
			
			
		} while (num==0);
		
	}

}

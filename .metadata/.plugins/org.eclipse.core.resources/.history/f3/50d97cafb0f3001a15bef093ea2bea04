package Turma9;

import java.util.Scanner;

public class Ex05_10_09_20 {

	public static void main(String[] args) {
		
		int num, soma=0; 
		System.out.println("Digite os números que deseja somar, Ao final 0 para sair...");
			Scanner ler = new Scanner(System.in);
				
		do 
		{
						
			num = ler.nextInt();
			
			soma = num + soma;		 
			
			
		} while (num!=0);
		System.out.println("A soma dos numeros digitados foi: " + soma);
	}

}

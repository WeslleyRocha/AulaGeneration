package Turma9;

import java.util.Scanner;

public class Ex02_10_09_20 {

	public static void main(String[] args) {
		
		int num1, par=0, impar=0; 
		
		Scanner ler = new Scanner (System.in); //"Ativar a "variavel" 
		
		
		for (num1=1; num1<=10; num1++)
			
		{
			System.out.println("Digite o numero:");
			num1 = ler.nextInt();

			if (num1%2==0)
			{
				par = par + num1;
			}
			else impar = impar + num1;
			
		}
		System.out.println(" Foram encontrados " + par + " numeros pares");
		System.out.println(" Foram encontrados " + impar + " numeros impar");
	}

}

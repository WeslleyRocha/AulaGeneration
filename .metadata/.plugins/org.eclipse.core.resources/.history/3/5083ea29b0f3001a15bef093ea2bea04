package Turma9;

import java.util.Scanner;

public class Ex05_10_09_20 {

	public static void main(String[] args) {
		
		int num, soma=0; 
		
				
		do 
		{
			System.out.println("Entre com o numero: " + "\n Ou 0 para sair...");
			Scanner ler = new Scanner(System.in);
			
			num = ler.nextInt();
			
			num = num + num;		
			
			
		} while (num!=0);
		System.out.println("A soma dos numeros digitados foi: " + num);
	}

}
